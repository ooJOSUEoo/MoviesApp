{
  "expo": {
    "name": "Movies App",
    "description": "App to search for movies and see their details, from the [TMDB](https://developer.themoviedb.org/).",
    "slug": "moviesApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon1.png",
    "userInterfaceStyle": "light",
    "scheme": "moviesapp",
    "splash": {
      "image": "./assets/splash1.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon1.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.oojosueoo.moviesApp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-8335959661036674~7731219859",
          "iosAppId": "ca-app-pub-8335959661036674~7731219859"
        }
      ],
      ["expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "extraProguardRules": "-keep class com.google.android.gms.internal.consent_sdk.** { *; }"
          } 
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "17675405-8d9e-4668-a4e0-2c243985ccd7"
      }
    }
  }
}
